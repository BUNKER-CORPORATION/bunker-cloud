# ===========================================
# BUNKER CLOUD - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database
POSTGRES_HOST=bunker-postgres
POSTGRES_PORT=5432
POSTGRES_USER=bunkercloud
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=bunkercloud

# Redis
REDIS_HOST=bunker-redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_password_here

# JWT Authentication
JWT_SECRET=your_secure_jwt_secret_here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# MinIO Object Storage
MINIO_ROOT_USER=bunkeradmin
MINIO_ROOT_PASSWORD=your_secure_password_here
MINIO_ENDPOINT=bunker-minio:9000

# API Configuration
NODE_ENV=production
API_PORT=3000
CORS_ORIGINS=https://cloud.bunkercorpo.com,https://bunkercorpo.com

# Domain
DOMAIN=bunkercorpo.com
API_URL=https://api.bunkercorpo.com
